<h1>Create a Pirate and Two Ships</h1>
<form method="post" action='/pirates'>
    
    <label for="name">Pirate Name</label>
    <input type="text" id="name" name="pirate[name]">

    <label for="weight">Pirate Weight</label>
    <input type="text" id="weight" name="pirate[weight]">

    <label for="height">Pirate Height</label>
    <input type="text" id="height" name="pirate[height]">
    
    <br>

    <label for="name">First Ship Name</label>
    <input type="text" id="ship_name_1" name="pirate[ships][][name]">

    <label for="weight">Ship Type</label>
    <input type="text" id="ship_type_1" name="pirate[ships][][type]">

    <label for="height">Ship Booty</label>
    <input type="text" id="ship_booty_1" name="pirate[ships][][booty]">
    
    <br>
    
    <label for="name">Second Ship Name</label>
    <input type="text" id="ship_name_2" name="pirate[ships][][name]">

    <label for="weight">Ship Type</label>
    <input type="text" id="ship_type_2" name="pirate[ships][][type]">

    <label for="height">Ship Booty</label>
    <input type="text" id="ship_booty_2" name="pirate[ships][][booty]">

    <input type="submit" value="submit">

</form>